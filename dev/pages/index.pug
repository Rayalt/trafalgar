						svg.icon.icon__nav-arrow.icon__nav-arrow_forward.icon__nav-arrow_active
							use(xlink:href='/img/svgSprite.svg#icon__arrow')
	
	section.articles
		.articles__inner
			.grid
				.grid__row
					.grid__col.grid__col_lg-12
						h2.articles__heading Check out our latest article
			.grid
				.grid__row
					.grid__col.grid__col_sm-12
						.articles__card-row
							+articles([
										{
											img: 'analys',
											alt: 'Test collection',
											title: 'Disease detection, check up in the laboratory',
											descr: 'In this case, the role of the health laboratory is very important to do a disease detection...'
										}
									])
							+articles([
										{
											img: 'lab',
											alt: 'Laboratory man',
											title: 'Herbal medicines that are safe for consumption',
											descr: 'Herbal medicine is very widely used at this time because of its very good for your health...'
										}
									])
							+articles([
										{
											img: 'mask',
											alt: 'Woman with face mask',
											title: 'Natural care for healthy facial skin',
											descr: 'A healthy lifestyle should start from now and also for your skin health. There are some...'
										}
									])
			.articles__btn
				.btn.btn__bordered
					a.btn__link.btn__link_blue(href='#') View all
			img.articles__bg.articles__bg_organic-shape(src='/img/img__bg-organic-shape.png' alt='Background element')
			img.articles__bg.articles__bg_dot-element(src='/img/bg__element_blue.png' alt='Background element')
			img.articles__bg.articles__bg_bottom-dot-element(src='/img/bg__element_blue.png' alt='Background element')
	
	footer.footer
		.footer__inner
			.grid
				.grid__row
					.grid__col.col-order__xs-2.grid__col_sm-8.grid__col_md-5.grid__col_lg-5
						.footer__info
							.footer__logo
								svg.icon.icon__logo-primary
									use(xlink:href='/img/svgSprite.svg#icon__logo_primary')
							p.footer__about Trafalgar provides progressive, and affordable healthcare, accessible on mobile and online for everyone
							p.footer__copy ©Trafalgar PTY LTD 2020. All rights reserved
					.grid__col.grid__col_sm-10.grid__col_md-6.col-order__sm-3.col-offset__md-1.grid__col_lg-6.col-offset__lg-1
						.footer__links
							.footer-links
								+footer-links('Company',
									[
										{link: 'About', href: '#'},
										{link: 'Testimonials', href: '#'},
										{link: 'Find a doctor', href: '#'},
										{link: 'Apps', href: '#'}
									]
								)
							.footer-links
								+footer-links('Region',
									[
										{link: 'Indonesia', href: '#'},
										{link: 'Singapore', href: '#'},
										{link: 'Hongkong', href: '#'},
										{link: 'Canada', href: '#'}
									]
								)
							.footer-links
								+footer-links('Help',
									[
										{link: 'Help center', href: '#'},
										{link: 'Contact support', href: '#'},
										{link: 'Instructions', href: '#'},
										{link: 'How it works', href: '#'}
									]
								)
			img.footer__dot-element(src='/img/bg__element_blue.png' alt='Background element')

	.page__blackout